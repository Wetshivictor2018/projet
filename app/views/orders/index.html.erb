<section class="p-0 bg-light">
  <div class="image image-overlay image-cover" style="background-image:url(../../assets/images/demo/coworking/coworking-small-11.jpg)"
      data-top-top="transform: translateY(0px);" 
      data-top-bottom="transform: translateY(-250px);"></div>
  <div class="container">
    <div class="row justify-content-left align-items-end vh-30 mb-5">
      <div class="col col-md-10 col-lg-8">
        <div class="row align-items-center">
          <div class="col">
            <div class="row align-items-center">
              <div class="col-md-8">
                <h2 class="mb-0">All your orders <%= current_user.first_name %> <%= current_user.last_name %> </h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section >
  <div class="container bg-light">
    <div class="row">
      <div class="col">
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane show active" id="first" role="tabpanel" aria-labelledby="first-tab">
            <% @user_orders.each do |order| %>
              <div class="accordion-group" data-accordion-group>
                <div class="accordion" data-accordion>
                  <div class="accordion-control" data-control>
                    <span class="fw-25"> <%= order.created_at.strftime("%F")%> </span>
                    <h5>Order # <%= order.id %> for a total amount of <%=number_to_currency(order.order_total, unit:"€")%></h5>
                    <div class="speakers text-right">

                        More details

                    </div>
                  </div>
                  <div class="accordion-content" data-content>
                    <div class="accordion-content-wrapper">
                      <ul class="ml-lg-25 mr-lg-3">
                        <% order.line_items.each do |item| %>
                          <li><%= item.formation.name %>  - <%= number_to_currency(item.formation.price, unit:"€") %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
